<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple2"
    android:elevation="4dp"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple3"
        >

        <ImageView
            android:id="@+id/imgview_id"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/name_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="name"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/phone_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:text="01129053117"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/texts" />

        <TextView
            android:id="@+id/bithday_textview_id"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="80dp"
            android:text="01/05/1995"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/texts" />

        <CheckBox
            android:id="@+id/checkbox_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/id_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:text="id"
            android:visibility="gone"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/willnotify_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:text="Will notify you on time"
            android:textColor="@color/texts"
            android:textSize="14sp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>